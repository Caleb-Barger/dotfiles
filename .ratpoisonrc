# Setting escape to Windows key
escape Super_L

# Restart Ratpoison
bind r restart

# moving stuff
unbind k
bind j focusdown
bind h focusleft
bind k focusup
bind l focusright
bind C-j exchangedown
bind C-h exchangeleft
bind C-k exchangeup
bind C-l exchangeright

# murder
unbind c
bind c delete
unbind C
bind C kill

# splitting
bind S split
bind s hsplit
bind u undo
bind q remove
bind o only

#resizing frames
unbind r
bind H resize -15 0
bind L resize 15 0
bind J resize 0 -15
bind K resize 0 -15
